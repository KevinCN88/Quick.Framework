<Window x:Class="LogDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogDemo"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="QuickFramework - 日志机制演示" Height="450" Width="800">
    <Grid Margin="9">
        <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center">
            <Button Content="输出日志" Click="btnWriteLog_Click" Width="100" />
            <Button Content="异常日志" Click="btnWriteExceptionLog_Click" Margin="30,0,0,0" Width="100" />
            <Button Content="崩溃日志测试" Click="btnTestCrashLog_Click" Width="100" Margin="30,0,0,0" />
            <Button Content="打开日志目录" Click="btnOpenLogDirectory_Click" Width="100" Margin="30,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
