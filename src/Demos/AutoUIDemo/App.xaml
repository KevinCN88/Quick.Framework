<qk:QWpfApplication x:Class="AutoUIDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AutoUIDemo"
             xmlns:qk="http://quick.cvbox.cn/2020">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Quick.Wpf;component/Themes/AutoUI.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AutoUIToggleBtnStyle" TargetType="{x:Type ToggleButton}">
                <Setter Property="Content" Value="" />
                <Setter Property="Width" Value="50" />
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Content" Value="√" />
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</qk:QWpfApplication>
