                <Button Width="100" Content="枚举" Click="btnEnumDemo_Click" />
                <Button Width="100" Content="DataGrid" Click="btnDataGridDemo_Click" />
                <Button Width="100" Content="其他控件" Click="btnOtherControlDemo_Click" />
