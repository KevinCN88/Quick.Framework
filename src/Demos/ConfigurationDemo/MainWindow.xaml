<Window x:Class="ConfigurationDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurationDemo"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="QuickFramework - 配置演示" Height="450" Width="800">
    <Grid Margin="8">
        <StackPanel Orientation="Horizontal" Height="30">
            <TextBlock Text="点击时间：" VerticalAlignment="Center" />
            <TextBlock x:Name="tblClickTime" VerticalAlignment="Center" Width="140"  Margin="10,0,0,0" />
            <TextBlock Text="名字：" VerticalAlignment="Center" Margin="10,0,0,0" />
            <TextBox x:Name="tbxName" Width="140"  Margin="10,0,0,0" />
            <Button Content="保存" Click="btnSave_Click"  Margin="10,0,0,0" Width="70" />
        </StackPanel>
    </Grid>
</Window>
